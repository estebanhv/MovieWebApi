<Window x:Class="MovieDesktopApp.view.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LoginView"
        Height="550"
        Width="800"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="Transparent"
        AllowsTransparency="True">

    <Border CornerRadius="50" BorderThickness="5">
        <Border.BorderBrush>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#0B1D51" Offset="0.0"/>
                <GradientStop Color="#725CAD" Offset="0.75"/>
                <GradientStop Color="#0B1D51" Offset="1.0"/>
            </LinearGradientBrush>
        </Border.BorderBrush>
        <Border.Background>
            <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
                <GradientStop Color="#060531" Offset="0.0"/>
                <GradientStop Color="#1B1448" Offset="0.75"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Barra superior -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="10,0,10,0">
                <TextBlock Text="Login"
                           Foreground="DarkGray"
                           FontSize="24"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           DockPanel.Dock="Left"/>

                <Button x:Name="btnClose"
                                Content="X"
                                Click="btnClose_Click"
                                Width="25"
                                Height="25"
                                Cursor="Hand"
                                DockPanel.Dock="Right" HorizontalAlignment="Right" Margin="0,0,25,0"> 
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Red" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnMinimize"
                        Content="-"
                        Click="btnMinimize_Click"
                        Width="25"
                        Height="25"
                        Cursor="Hand"
                        DockPanel.Dock="Right" Margin="0,0,1,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="MediumPurple" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                
            </DockPanel>

            <!-- Cuerpo -->
            <StackPanel Grid.Row="2"
                        Margin="0,35,0,0"
                        Orientation="Vertical"
                        Width="250">
                
                <TextBlock Text="MovieApi"
                           Foreground="White"
                           FontSize="40"
                           FontWeight="Medium"
                           FontFamily="Calibri Light"
                           HorizontalAlignment="Center"/>

                <TextBlock Text="Bienvenido a nuestra app donde podrás buscar películas y guardar tus favoritas"
                           Foreground="LightGray"
                           FontSize="20"
                           FontWeight="Medium"
                           FontFamily="Calibri Light"
                           TextWrapping="Wrap"
                           TextAlignment="Center"
                           Margin="0,5,0,10"/>

                <TextBlock Text="Username"
                            Foreground="DarkGray"
                            FontSize="18"
                            FontWeight="Medium"
                            FontFamily="Calibri Light"

                            Margin="0,10,0,0"/>

                <TextBox x:Name="txUser"
                         FontSize="19"
                         FontWeight="Medium"
                         FontFamily="Calibri Light"
                         Background="Transparent"
                         Foreground="White"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,1"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="20,0,0,0">
                    
                    
                    
                </TextBox>


                <TextBlock Text="Password"
                       Foreground="DarkGray"
                       FontSize="18"
                       FontWeight="Medium"
                       FontFamily="Calibri Light"
                       Margin="0,20,0,0" />

                <PasswordBox x:Name="txPass"
                     FontSize="19"
                     FontWeight="Medium"
                     FontFamily="Calibri Light"
                     Background="Transparent"
                     Foreground="White"
                     CaretBrush="LightGray"
                     BorderBrush="DarkGray"
                     BorderThickness="0,0,0,1"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Margin="0,5,0,0"
                     Padding="20,0,0,0" >
                    
                </PasswordBox>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="¿No tienes cuenta?" 
                       Foreground="LightGray" 
                       FontFamily="Calibri Light" 
                       FontSize="14"/>
                    <TextBlock Margin="5,0,0,0" FontSize="14">
                        <Hyperlink Click="Register_Click" Foreground="LightBlue">
                            Regístrate
                        </Hyperlink>
                    </TextBlock>
                </StackPanel>


                <Button x:Name="btnLogin"
                        Content="Login"
                        Click="btnLogin_Click"
                        Width="250"
                        Height="40"
                        Margin="0,50,0,0"
                        Background="#725CAD"
                        Foreground="White"
                        FontSize="18"
                        FontWeight="Medium"
                        FontFamily="Calibri Light"
                        Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>
