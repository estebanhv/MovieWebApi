<Window x:Class="MovieDesktopApp.View.SearchMovie"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MovieDesktopApp.View"
        mc:Ignorable="d"
        Title="SearchMovie" 
        Height="550" 
        Width="800"
        ResizeMode="NoResize"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        MouseDown="Window_MouseDown"
        Background="#1e1e2f">
    <!-- Aquí van tus recursos -->
    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect"
                          BlurRadius="8"
                          ShadowDepth="2"
                          Direction="270"
                          Opacity="0.5"
                          Color="Black"/>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- CABECERA -->
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,20">
            <TextBlock Text="🎬 Movie Desktop App"
                   FontSize="24"
                   Foreground="LightGray"
                   FontWeight="Bold"
                   VerticalAlignment="Center"
                   Margin="0,0,20,0"/>

            <TextBlock x:Name="txtLoginLogout"
               Text="Cerrar sesión"
               Foreground="LightBlue"
               VerticalAlignment="Center"
               FontSize="14"
               Cursor="Hand"
               Margin="240,0,0,0"
               MouseDown="txtLoginLogout_MouseDown"/>

            <Button x:Name="btnMinimize"
        Content="-"
        Click="btnMinimize_Click"
        Width="25"
        Height="25"
        Cursor="Hand" Margin="100,0,0,0"
        >
                <Button.Template>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="MediumPurple" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnClose"
                Content="X"
                Click="btnClose_Click"
                Width="25"
                Height="25"
                Cursor="Hand"
                DockPanel.Dock="Right" Margin="1,0,25,0" HorizontalAlignment="Right">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="Red" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </StackPanel>
        
        

        <!-- BÚSQUEDA -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,40,0,10">
            <TextBox x:Name="SearchBox"
                 Width="500"
                 FontSize="18"
                 Padding="10"
                 VerticalContentAlignment="Center"
                 />
            <Button Content="Buscar"
                Width="100"
                FontSize="16"
                Background="#725CAD"
                Foreground="White"
                Margin="10,0,0,0"
                Click="SearchButton_Click"/>

            <Button Content="Favoritos ❤️"
                    x:Name="btnViewFavs"
                    FontSize="16"
                    Background="Violet"
                    Foreground="Black"
                    Margin="30,0,0,0"
                    Click="btnViewFavs_Click"/>
            
        </StackPanel>

        <!-- RESULTADOS -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl x:Name="MovieListPanel" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="3" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="1"
                        BorderBrush="Gray"
                        Padding="10"
                        Margin="10"
                        Width="200"
                        Background="White"
                        CornerRadius="8">
                            <StackPanel>
                                <Image Source="{Binding Poster}" Height="200" Stretch="UniformToFill" Margin="0,0,0,10"/>
                                <TextBlock Text="{Binding Title}" FontWeight="Bold" FontSize="14" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Year}" Foreground="Gray" FontSize="12"/>
                                <Button Content="{Binding ActionIcon}"
                                Background="Transparent"
                                Foreground="Red"
                                BorderThickness="0"
                                Cursor="Hand"
                                Margin="0,10,0,0"
                                Click="btnAddFav_Click"
                                Tag="{Binding}" />

                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>


    </Grid>
</Window>
